<style>
input[type="text"]{
  background-color: transparent;
  color:transparent;
}
</style>
<div class="login_wrapper login-text-color">
  <div class="animate form login_form">
    <!-- <section class="login_content login-text-shadow"> -->
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <!-- <div style="background-color:black;opacity:1;">
      <h1 class="login-text-color">Login Form</h1>

      </div> -->

      <div class="row" style="background-image:url('/assets/image4.jpg');background-repeat: no-repeat;background-size: cover; height:460px">
        <div class="col-md-4"></div>
        <div class="col-md-4">
          <br/><br/><br/><br/><br/><br/>
          <% if alert.present? %>
          <div class="alert alert-danger alert-dismissible fade in" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span>
            </button>
            <strong><%= alert %></strong>
          </div>
          <% end %>
          <div class="form-group">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true , id:"make-transperant", :class => "form-control", autocomplete: "on"%>
          </div>
          <div class="form-group">
            <%= f.label :password %><br />
            <%= f.password_field :password, autocomplete: "off" , :class => "form-control" %>
          </div>
          <div class="form-group">
            <%= f.submit "Log in", class: "btn btn-success submit"%>
          </div>

        </div>
        <div class="col-md-4"></div>
      </div>
      <% end %>
      <div align="center">
        <h3><font color="white"><b>BEST CLINIC</b></font></h3>
        <div class="clearfix"></div>

        <div class="separator">
          <div class="clearfix"></div>
          <br />
          <h1><i class="fa fa-paw"></i> <a href="/" class="to_register login-text-color"  style="font-size:25px;">TesttingLab! </a></h1>
          <p>©2016 All Rights Reserved. TesttingLab! is a Hospital app. Privacy and Terms</p>
        </div>
      </div>
    <!-- </section> -->
  </div>
</div>

<script>
$(document).ready(function() {
  checkLogInForm()
});
</script>
